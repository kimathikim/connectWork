{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.js", "**/node_modules/**/*"]
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.js", "**/node_modules/**/*"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "importMap": "./import_map.json"
}
